<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="@string/patient_id_default"
        android:inputType="number"
        android:key="patient_id"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/patient_id_display" />

    <EditTextPreference
        android:defaultValue="60"
        android:inputType="number"
        android:numeric="integer"
        android:key="update_interval"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/prompt_interval_text" />

    <EditTextPreference
        android:defaultValue="2"
        android:inputType="number"
        android:key="screen_on_time"
        android:numeric="integer"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Screen on time (mins)" />

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/list_preference_entries"
        android:entryValues="@array/list_preference_entries_values"
        android:key="interface_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/select_interface"/>



</PreferenceScreen>
